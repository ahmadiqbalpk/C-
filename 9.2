void ascedingOrder(int *arr, int size)
{
    int temp;
    
    for(int i = 0; i < size; i++)
       {
        for(int j = 1; j < size-1; j++)
         {
           if(arr[j] < arr[i])
            {
               temp = arr[i];
               arr[i] = arr[j];
               arr[j] = temp;
            }
             
           }
       }
}
void showdata(int *arr, int size)
{
    cout << "Marks in ascending order"<< endl;
    for(int i =0; i <size;i++)
    {
        cout << *(arr+i)<<endl;
    }
}


void freeMemory(int *arr, int size)
{
    delete [] arr;
    arr =0;
}

int averageCalculate(int *arr,int size)
{
    int avg =0;
    for(int i = 0; i < size; i++)
    {
        avg = *(arr+i) + avg;
    }
    avg= avg/size;
    return avg;
}
